<div id="send" style="display: none;">
    <p style="color: #808080;">Address</p>
    <input type="text" id="sendaddress" placeholder="Ethereum Address (0x) "
        style="padding:14px; width: 100%; background-color: transparent; border: 1px solid #808080; color: white; width: 100%; font-size:90%; border-radius: 12.5px;">
    <br><br>

    <div style="display: flex;">
        <div style="width: 90%;">
            <p style="color: #808080;">Tokens</p>
        </div>
        <div style="width: 10%; margin-top:1%; margin-right:1%;">
            <div id="maxsenddiv">
                <a id="maxsend" class="bluelink" style="font-size:80%; float:right; ">MAX</a>
                <img src="/3.images/loading.gif" id="maxloadimgsend" style="float:right; display:none" width="50%">
            </div>
        </div>
    </div>
    <div style="display: flex;">
        <div style="width: 35%;">
            <select id="sendcurrency" name="currency"
                style="width: 100%; padding: 12px; padding-right: 12%;  border-radius: 12.5px; justify-items: center; background: transparent; border: 1px solid #808080; color: white;">
                <option value="eth"
                    style="background-color: #202020; border: 1px solid #808080; padding:12px; color: white;">
                    ETH
                </option>
                <option value="weth"
                    style="background-color: #202020; border: 1px solid #808080; padding:12px; color: white;">
                    WETH (&#926;)</option>

            </select>
        </div>
        <div style="width: 65%; padding-left:2.5%">
            <form>
                <input oninput="inusd('sendamount')" autocomplete="off" type="text" id="sendamount" name="sendamount"
                    placeholder="Amount"
                    style="text-align: center;padding:14px; width: 75px; background-color: transparent; border: 1px solid #808080; color: white; width: 100%;   border-radius: 12.5px;">
            </form>
        </div>
    </div>
    <div style="display: flex;">
        <div style="width: 90%;">
            <p id="sendbalance" style="color: #808080; font-size:100%; margin-right:1%; margin-top:1%"></p>
        </div>
        <div style="width: 10%;  margin-top:1%;">
            <p id="sendamountinusd" style="color: #808080; font-size:80%; float:right; margin-right:1%;"></p>
        </div>
    </div>

    <br>
    <div style="display: none; padding-bottom:2.5%" id="sendgasfees">
        <br>
        <div style="width: 90%;s">
            <p style="color: #808080;">Estimated Gas Fees</p>
            <p style="color: #2081E2; font-size:90%">Likely in 30 seconds</p>
        </div>
        <div style="width: 10%;" class="vertcenter">
            <div id="sendgasloading" style="display: none;">
                <img src="/3.images/loading.gif" id="maxloadimgsend" style="float:right; display:block" width="50%">
            </div>
            <div id="sendgasdetails">
                <p style=" float:right; font-size:90%" id="sendgaspriceineth">0.023&#926;</p>
                <p style="color: #808080; font-size:90%; float:right" id="sendgaspriceinusd">$56.87</p>
            </div>

        </div>
    </div>
    <center id="senderrorbox" style="display: none;">
        <br>
        <p id="senderror" style="color: #FE6579; font-size:90%;"><br>Enter valid listing amount</p>
    </center>
    <br>
    <div style="display: flex;" class="vertcenter">
        <button class="bluebutton" onclick="sendnow();" style="margin-left: 1%;">Send</button>
    </div>

</div>